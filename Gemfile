source 'https://rubygems.org'

# GitHub Pages gem - contains all dependencies needed for GitHub Pages
gem 'github-pages', '~> 232', group: :jekyll_plugins

# Additional plugins (these are included in github-pages gem but explicitly listed for clarity)
group :jekyll_plugins do
  gem 'jekyll-sitemap'
  gem 'jekyll-gist'
  gem 'jekyll-paginate'
end

# Add webrick for Ruby 3.x compatibility
gem "webrick", "~> 1.8"